                        {% if (recibos == 0 or recibos > constant('MESES_COBRANZA')) %}
                            $("#bootstrap-wizard-1").find(".pager .next").addClass("disabled");
                        {% endif %}
                        if (!$(":checkbox").is(":enabled")) {
                            $("#bootstrap-wizard-1").find(".pager .next").addClass("disabled");
                        }
