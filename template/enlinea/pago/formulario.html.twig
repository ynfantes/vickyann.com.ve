            });
            //monto = monto / 100;
            $("#monto").val(monto.formatCurrency());
        });
        $("select[name|='tipo_pago']").change(function() {
            
            if ($(this).val() == "T") {
                $("#banco_origen").attr('disabled', false);
                $('#numero').html("Código Transferencia:");
